<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.statscalc" android:versionName="0.1.0">
    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".StatsCalcMain"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/basic_stats" android:name=".BasicStats" android:configChanges="orientation"></activity>
        <activity android:label="@string/perm_comb" android:name=".PermutationsCombinations"></activity>
        <activity android:label="@string/linear_regression" android:name=".LinearRegression" android:configChanges="orientation"></activity>
        <activity android:configChanges="orientation" android:label="@string/distribution_stats" android:name=".DistributionStats"></activity>
        <activity android:name=".DataManagement" android:label="@string/data_management" android:configChanges="orientation"></activity>

    </application>
</manifest>