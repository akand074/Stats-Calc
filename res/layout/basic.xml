<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="top">
    <com.google.ads.AdView android:id="@+id/adView" android:layout_height="wrap_content" ads:adUnitId="a14e62b90928c5e" ads:adSize="BANNER" ads:loadAdOnCreate="true" android:layout_width="fill_parent"/>
	<ScrollView	android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@drawable/numbers2">
		<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="10dip">
		    <TableLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:stretchColumns="1">
		        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
		            <TextView android:layout_height="wrap_content" android:text="@string/basicInput" android:layout_width="fill_parent" android:layout_span="2" android:id="@+id/tBasicInstructions" style="@style/PlainText"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		        	<TextView android:layout_height="wrap_content" android:text="@string/number_samples" android:layout_width="wrap_content" android:id="@+id/tBasicNumSamplesLabel" style="@style/PlainText"></TextView>
		        	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicNumSamples" android:text="0" android:gravity="center" style="@style/PlainText"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		            
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sample_min" android:id="@+id/tBasicMinLabel" style="@style/PlainText"></TextView>
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:gravity="center" android:id="@+id/tBasicMin" style="@style/PlainText"></TextView>
		            
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		            
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sample_max" android:id="@+id/tBasicMaxLabel" style="@style/PlainText"></TextView>
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicMax" android:text="0" android:gravity="center" style="@style/PlainText"></TextView>
		            
		        </TableRow>
		        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
		            <TextView style="@style/PlainText" android:layout_height="wrap_content" android:id="@+id/tBasicRangeLabel" android:layout_width="wrap_content" android:text="Range"></TextView>
		            <TextView style="@style/PlainText" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/tBasicRange" android:layout_width="wrap_content" android:text="0"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		            
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sum" android:id="@+id/tBasicSumLabel" style="@style/PlainText"></TextView>
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicSum" android:text="0" android:gravity="center" style="@style/PlainText"></TextView>
		            
		        </TableRow>
		        <TableRow android:layout_gravity="left" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content">
		            
		                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tBasicMeanLabel" style="@style/PlainText" android:text="Mean (Arithmetic)"></TextView>
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicMean" android:text="0" android:gravity="center" style="@style/PlainText"></TextView>
		          
		        </TableRow>
		        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
		            <TextView style="@style/PlainText" android:layout_height="wrap_content" android:id="@+id/tBasicGeometricMeanLabel" android:layout_width="wrap_content" android:text="Mean (Geometric)"></TextView>
		            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="0" android:gravity="center" style="@style/PlainText" android:id="@+id/tBasicGeometricMean"></TextView>
		        </TableRow>
		        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
		            <TextView style="@style/PlainText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Lower Quartile" android:id="@+id/tBasicLowerQuartileLabel"></TextView>
		            <TextView android:gravity="center" style="@style/PlainText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="0" android:id="@+id/tBasicLowerQuartile"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		          
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/median" android:id="@+id/tBasicMedianLabel" style="@style/PlainText"></TextView>
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicMedian" android:text="0" android:gravity="center" style="@style/PlainText"></TextView>
		          
		        </TableRow>
		        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
		            <TextView style="@style/PlainText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Upper Quartile" android:id="@+id/tBasicUpperQuartileLabel"></TextView>
		            <TextView android:gravity="center" style="@style/PlainText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="0" android:id="@+id/tBasicUpperQuartile"></TextView>
		        </TableRow>
		        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
		            <TextView style="@style/PlainText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="IQR" android:id="@+id/tBasicIQRLabel"></TextView>
		            <TextView android:gravity="center" style="@style/PlainText" android:layout_height="wrap_content" android:id="@+id/tBasicIQR" android:layout_width="wrap_content" android:text="0"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/TableRow">
		            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicModeLabel" style="@style/PlainText" android:text="Mode"></TextView>
		            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicMode" style="@style/PlainText" android:text="0" android:gravity="center"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		          
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/standard_deviation" android:id="@+id/tBasicStandardDeviationLabel" style="@style/PlainText"></TextView>
		                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicStandardDeviation" android:text="0" android:gravity="center" style="@style/PlainText"></TextView>
		          
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/TableRow">
		            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicStandardErrorLabel" style="@style/PlainText" android:text="Standard Error"></TextView>
		            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tBasicStandardError" style="@style/PlainText" android:gravity="center" android:text="0"></TextView>
		        </TableRow>
		        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
		            <TextView style="@style/PlainText" android:layout_height="wrap_content" android:id="@+id/tBasicVarianceLabel" android:layout_width="wrap_content" android:text="Variance"></TextView>
		            <TextView style="@style/PlainText" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/tBasicVariance" android:layout_width="wrap_content" android:text="0"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kurtosis" android:id="@+id/tBasicKurtosisLabel" style="@style/PlainText"></TextView>
		            <TextView android:layout_width="wrap_content" android:gravity="center" android:text="0" android:layout_height="wrap_content" android:id="@+id/tBasicKurtosis" style="@style/PlainText"></TextView>
		        </TableRow>
		        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/skewness" android:id="@+id/tBasicSkewnessLabel" style="@style/PlainText"></TextView>
		            <TextView android:layout_width="wrap_content" android:gravity="center" android:text="0" android:layout_height="wrap_content" android:id="@+id/tBasicSkewness" style="@style/PlainText"></TextView>
		        </TableRow>
		    </TableLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>