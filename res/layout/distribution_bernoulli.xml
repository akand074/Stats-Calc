<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout1">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="# of Successes: "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:id="@+id/eBernoulliX" android:layout_width="70dip">
                <requestFocus></requestFocus>
            </EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="# of Trials"></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:id="@+id/eBernoulliN" android:layout_width="70dip"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="% Success: "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:layout_width="70dip" android:id="@+id/eBernoulliS"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Probability(X = x): "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:id="@+id/eBernoulliP" android:layout_width="70dip"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Probability(X &gt;= x): "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:layout_width="70dip" android:id="@+id/eBernoulliPGT_E"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Probability(X &gt; x): "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:layout_width="70dip" android:id="@+id/eBernoulliPGT"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow7" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Probability(X &lt;= x): "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:id="@+id/eBernoulliPLT_E" android:layout_width="70dip"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow8" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Probability(X &lt; x): "></TextView>
            <EditText android:inputType="number|numberSigned|numberDecimal" android:layout_height="40dip" android:id="@+id/eBernoulliPLT" android:layout_width="70dip"></EditText>
        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical">
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/eBernoulliCalcP" android:text="Calculate" android:onClick="bernoulliDistributionOnClick"></Button>
    </LinearLayout>
    
</LinearLayout>
