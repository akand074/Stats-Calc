<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
<com.google.ads.AdView android:id="@+id/adView" android:layout_width="fill_parent" ads:adUnitId="a14e62b90928c5e" ads:adSize="BANNER" ads:loadAdOnCreate="true" android:layout_height="wrap_content"/>
<ScrollView android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@drawable/background2">
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="10dip" android:orientation="vertical">
	    <LinearLayout android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
	        <TextView android:text="@string/select_distribution" android:paddingRight="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tDistributionSelection" style="@style/PlainText"></TextView>
	        <Spinner android:id="@+id/sDistributionSelector" android:layout_width="wrap_content" android:entries="@array/distributions" android:layout_height="wrap_content"></Spinner>
	    </LinearLayout>
		<FrameLayout android:id="@+id/fDistribution" android:layout_width="fill_parent" android:layout_height="fill_parent"></FrameLayout>
	</LinearLayout>	
</ScrollView>
</LinearLayout>