<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center" android:background="@drawable/main_screen">
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TableRow android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px">
            <ImageButton android:clickable="true" android:layout_margin="5dip" android:layout_gravity="center_vertical|center_horizontal" android:src="@drawable/basic" android:onClick="launchActivity" android:tag="BasicStats" android:layout_height="90dip" android:layout_width="135dip" android:id="@+id/bMainBasicStats"></ImageButton>
            <ImageButton android:clickable="true" android:layout_margin="5dip" android:layout_gravity="center_vertical|center_horizontal" android:src="@drawable/linreg" android:tag="LinearRegression" android:onClick="launchActivity" android:layout_height="90dip" android:layout_width="135dip" android:id="@+id/bMainLinearRegression"></ImageButton>
        </TableRow>
        <TableRow android:gravity="center_horizontal" android:layout_gravity="center_vertical|center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px">
            <ImageButton android:clickable="true" android:layout_margin="5dip" android:layout_gravity="center_vertical|center_horizontal" android:src="@drawable/permcomb" android:tag="PermutationsCombinations" android:onClick="launchActivity" android:layout_height="90dip" android:layout_width="135dip" android:id="@+id/bMainPermutationsCombinations"></ImageButton>
            <ImageButton android:clickable="true" android:layout_margin="5dip" android:layout_gravity="center_vertical|center_horizontal" android:src="@drawable/discrete" android:onClick="launchActivity" android:layout_height="90dip" android:layout_width="135dip" android:id="@+id/bMainDistribution" android:tag="DistributionStats"></ImageButton>
        </TableRow>
    </TableLayout>
</LinearLayout>
