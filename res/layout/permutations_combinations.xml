<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:padding="10dip">
	    <TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:stretchColumns="1">
	        <TableRow android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical">
	            <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Size of Set:"></TextView>
	            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/setSize" android:isScrollContainer="true" android:gravity="center" android:hint="Set" android:width="80dip" android:layout_gravity="center" android:inputType="number">
	                <requestFocus></requestFocus>
	            </EditText>
	        </TableRow>
	        <TableRow android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center_vertical">
	            <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Size of Group (if different):"></TextView>
	            <EditText android:layout_width="wrap_content" android:id="@+id/groupSize" android:gravity="center" android:hint="Group" android:width="80dip" android:layout_gravity="center" android:layout_height="wrap_content" android:inputType="number"></EditText>
	        </TableRow>
	        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center">
	            <Button android:text="@string/calc" android:id="@+id/perComCalc" android:width="70dip" android:tag="Calc" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
	        </TableRow>
	    </TableLayout>
	    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="1,3">
	        <TableRow android:layout_weight="1" android:layout_width="wrap_content" android:baselineAligned="true" android:layout_height="wrap_content" android:gravity="center_vertical">
	            <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Permutations:"></TextView>
	            <EditText android:layout_height="wrap_content" android:id="@+id/permVal" android:scrollHorizontally="true" android:selectAllOnFocus="true" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:hint="0" android:gravity="center"></EditText>
	            <TextView android:id="@+id/textView5" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="5dip" android:text="w/ rep:"></TextView>
	            <EditText android:id="@+id/permWithRep" android:layout_height="wrap_content" android:scrollHorizontally="true" android:selectAllOnFocus="true" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:hint="0" android:gravity="center"></EditText>
	        </TableRow>
	        <TableRow android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical">
	            <TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Combinations:"></TextView>
	            <EditText android:id="@+id/combVal" android:layout_height="wrap_content" android:scrollHorizontally="true" android:selectAllOnFocus="true" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:hint="0" android:gravity="center"></EditText>
	            <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:text="w/ rep:"></TextView>
	            <EditText android:id="@+id/combWithRep" android:layout_height="wrap_content" android:scrollHorizontally="true" android:selectAllOnFocus="true" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:hint="0" android:gravity="center"></EditText>
	        </TableRow>
	        <TableRow android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical">
	            <TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="# of subsets:"></TextView>
	            <EditText android:id="@+id/numSubset" android:layout_height="wrap_content" android:scrollHorizontally="true" android:selectAllOnFocus="true" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:hint="0" android:gravity="center"></EditText>
	        </TableRow>
	        <TableRow android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical">
	            <TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pigeonhole:"></TextView>
	            <EditText android:id="@+id/pigeonhole" android:layout_height="wrap_content" android:scrollHorizontally="true" android:selectAllOnFocus="true" android:layout_marginLeft="5dip" android:layout_width="fill_parent" android:hint="0" android:gravity="center"></EditText>
	        </TableRow>
	    </TableLayout>
	</LinearLayout>
</ScrollView>

